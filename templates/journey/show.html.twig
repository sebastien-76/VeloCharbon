{% extends 'base.html.twig' %}

{% block title %}Trajet
{% endblock %}

{% block body %}
	<h1 class="text-center my-5 lightbeige">{{ journey.stage }}</h1>

	<div class="card w-75 mx-auto text-center border-card my-3 py-3 bg-lightbeige rounded">
		<div class="d-flex justify-content-end">
			<a class="btn btn-app me-5 my-2 px-5" href="{{ path('app_journey_index') }}">Retour aux trajets</a>
		</div>
		<div class="card-body">
			<p class="card-text my-5">
				{{ journey.description}}
			</p>
			{% include "Administration/map/_map.html.twig" %}
		</div>
		<div class="w-100 d-flex justify-content-center mt-3 mb-5">
			{% if is_granted('ROLE_MOD') %}
				<a class="btn btn-app px-5" href="{{ path('app_journey_edit', {'id':journey.id}) }}">Modifier le trajet</a>
			{% endif %}
		</div>
	</div>

{% endblock %}
