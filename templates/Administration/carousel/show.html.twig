{% extends 'base.html.twig' %}

{% block title %}Carousel
{% endblock %}

{% block body %}
	<h1 class="text-center my-5 lightbeige">DÃ©tail d'une image</h1>

	<div class="card w-75 mx-auto  border-card my-3 py-3 bg-lightbeige rounded">
		<div class="d-flex justify-content-end">
			<a class="btn btn-app me-5 my-2 px-5" href="{{ path('app_admin_carousel_index') }}">Retour au carousel</a>
		</div>
		<div class="card w-75 mx-auto text-center border-card my-5">
			<div
				class="card-body">
				{# Affichage du nom de l'image #}
				<h5 class="my-3">
					Nom de l'image :
				</h5>
				<p class="card-text my-5">
					{{ carousel.imageName}}
				</p>
				{# Affichage de l'image #}
				<h5 class="my-3">
					Image :
				</h5>
				{% if carousel.imageName %}
					<img src="{{ vich_uploader_asset(carousel, 'imageFile') }}" class="card-img-top w-75" alt="{{ carousel.imageName }}">
				{% endif %}
				{# Boutons de modification et de suppression de l'image #}
				<div class=" d-flex flex-row justify-content-end align-items-center my-2">
					<a class="mx-2" href="{{ path('app_admin_carousel_edit', {'id':carousel.id}) }}"><img src="{{ asset('../assets/images/icones/pencil-square.svg') }}" alt="edition"></a>
					{{ include('/Administration/carousel/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
